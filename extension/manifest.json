{
  "manifest_version": 3,
  "name": "Amplify - YouTube Creator Tips",
  "version": "1.0.0",
  "description": "Tip your favorite YouTube creators with USDC on Solana",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://youtube.com/*",
    "https://28bc5347-71d7-42a5-9c82-4860713f9f76.preview.emergentagent.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://*.youtube.com/*", "https://youtube.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amplify - Tip Creators"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}